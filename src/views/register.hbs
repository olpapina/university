<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Registration</title>
</head>

<body>
  <div class="container">
    <form id="register-form">
      <h1 style="margin-left: 100px">Registration</h1>
      <p style="margin-left: 30px">Please fill in this form to create an account.</p>
      <hr>

      <label for="email" style="margin-left: 40px"><b>Username</b></label>
      <input type="text" placeholder="Enter username or email" id="usrname" name="usrname" required
        style="margin-left: 75px" class="field">
      <br>
      <label for="password" style="margin-left: 40px"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" id="psw" name="psw"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
        title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
        require style="margin-left: 75px" class="field">
      <br>

      <hr>

      <p style="margin-left: 30px">By creating an account you agree to our <a href="#">Terms and Privacy</a>.</p>
      <button id="submit" type="submit" class="button" style="margin-left: 30px">Register</button>
    </form>
  </div>

  <div class="container signin">
    <p style="margin-left: 30px">Already have an account? <a href="login">Sign in</a>.</p>

  </div>
  <br>

  <div id="message" style="display:none">
    <h3>Password must contain the following:</h3>
    <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
    <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
    <p id="number" class="invalid">A <b>number</b></p>
    <p id="length" class="invalid">Minimum <b>8 characters</b></p>
  </div>
  <script>
    const form = document.getElementById("register-form");
    form.addEventListener('submit', (e) => {
      e.preventDefault();

      const data = new FormData(e.target);
      const body = JSON.stringify(Object.fromEntries(data));

      fetch('http://localhost:3000/auth/register', {
        method: "POST",
        body,
        headers: {
          'Content-Type': 'application/json;charset=utf-8'
        },
      }).then((res) => res.json())
        .then((data) => {
          window.location.replace(`http://localhost:3000${data.redirectUrl}`);
        });
    });
  </script>
</body>

<style>
  .button {
    background-color: #571911;
    border: 2px;
    border-radius: 8px;
    color: white;
    padding: 12px 24px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 12px;
  }

  .field {
    width: 30%;
    padding: 12px 12px;
    margin: 8px 0;
    box-sizing: border-box;
    border-radius: 8px;
    border-color: #d05140;
  }
</style>

</html>